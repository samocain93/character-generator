
<section class="flex " id="">

  <div class="boxes border-4 bg-red-400 text-2xl leading-loose border-indigo-400" id="login-form">
    <h2 class="text-center">Login</h2>

    <form class="login-form" id="">
      <div class="" id="">
        <label for="email-login">Email:</label>
        <input type="email" name="email" class="insert" id="email-login" placeholder="Email">
      </div>

      <div class="" id="">
        <label for="password-login">Password:</label>
        <input type="password" name="password" class="insert" id="password-login" placeholder="Password">
      </div>

      <div class="text-center" id="">
        <button class="lbtn" id="" type="submit">login</button>
      </div>
    </form>

  </div>

  <div class="boxes border-solid bg-red-400 text-2xl border-4 leading-loose border-indigo-400" id="signup-form">
    <h2 class="text-center">Signup</h2>

    <form class="signup-form" id="">
      <div class="" id="">
        <label for="user-signup">Username:</label>
        <input type="text" class="insert" id="user-signup" placeholder="Username">
      </div>

      <div class="border-solid" id="">
        <label for="email-signup">Email:</label>
        <input type="email" name="email" class="insert" id="email-signup" placeholder="Email">
      </div>

      <div class="" id="">
        <label for="password-signup">Password:</label>
        <input type="password" name="password" class="insert" id="password-signup" placeholder="Password">
      </div>

      <div class="text-center" id="">
        <button class="lbtn" id="" type="submit">signup</button>
      </div>
    </form>

  </div>
</section>

