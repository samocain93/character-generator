
<section class="flex">

    <div class="border-4 rounded-lg border-indigo-400 bg-red-400 p-5 mt-12 text-xl">
        <div>
            <h2 class="text-center text-3xl pb-6">Create New Character!</h2>
        </div>

        <div>
            <form id="character-create-form">
                <div>
                    <label for="height">Character's Name:</label>
                    <input type="text" class="insert2 p-1" id="char-name" placeholder="Cool name">
                </div>

                <div>
                    <label>Character Age:</label>
                    <input type="input" class="insert2 p-1" id="char-age" placeholder="Age">
                </div>

                <div>
                    <label>Character's height in ft: </label>
                    <input type="range" id="char-height" name="height" min="1" max="8">
                </div>

                <div>
                    <label>Choose a class:</label>
                    <div id="class-choice"></div>
                </div>

                <div class="flex">
                    <button class="lbtn bg-green-300" id="" type="submit" for="submit">Create!</button>
                </div>
            </form>
        </div>

 

<script src="/js/character-forms.js"></script>
</div>
</section>

